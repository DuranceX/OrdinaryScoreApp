<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ordinaryscoreapp">

    <application
        tools:replace="android:icon"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrdinaryScoreApp">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Course.CourseOverview" />
        <activity android:name=".Course.CourseModify"
            android:theme="@style/Theme.NoActionBar"/>
        <activity android:name=".Student.StudentOverview" />
        <activity android:name=".Score.CourseScoreOverview" />
        <activity android:name=".Score.CourseScoreDetail"
            android:theme="@style/Theme.NoActionBar"/>
        <activity android:name=".Score.CourseCheckInScore"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.NoActionBar"/>
        <activity android:name=".Score.CourseHomeworkScore"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.NoActionBar"/>
        <activity android:name=".Score.CourseProgramScore"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.NoActionBar"/>
        <activity android:name=".Score.CourseTotalScore"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.NoActionBar"/>
    </application>

</manifest>